<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="upm.userinterfaces"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/myhome"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait" >

        <activity
            android:name="upm.userinterfaces.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="upm.userinterfaces.LightsActivity"
            android:label="@string/title_activity_lights" >
        </activity>
        <activity
            android:name="upm.userinterfaces.DoorsActivity"
            android:label="@string/title_activity_doors" >
        </activity>
        <activity
            android:name="upm.userinterfaces.BlindsActivity"
            android:label="@string/title_activity_blinds" >
        </activity>
        <activity
            android:name="upm.userinterfaces.SplashActivity"
            android:label="@string/myhome" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>